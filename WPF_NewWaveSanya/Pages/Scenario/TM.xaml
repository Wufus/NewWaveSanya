<Page x:Class="WPF_NewWaveSanya.Pages.Scenario.TM"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_NewWaveSanya.Pages.Scenario"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TM">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Back" Grid.Column="0" Grid.Row="0" Click="Button_Click" />
        <Button Content="AO" Grid.Column="2" Grid.Row="4"  />
        <TextBox Grid.Column="2" Grid.Row="6"  />
        <Button Content="Record" Grid.Column="2" Grid.Row="8"  />

        <Button Content="Красный" Grid.Column="8" Grid.Row="4"  />
        <Button Content="Зеленый" Grid.Column="8" Grid.Row="6"  />
        <Button Content="Синий" Grid.Column="10" Grid.Row="4"  />
        <Button Content="Тест" Grid.Column="10" Grid.Row="6"  />

        <TextBox Text="Станция" Grid.Column="8" Grid.Row="8" Grid.ColumnSpan="3" TextAlignment="Center" FontSize="24"/>

        <Grid Background="LightGray" Grid.Column="4" Grid.ColumnSpan="3" Grid.Row="0" Grid.RowSpan="9">
            <TextBlock Text="Info" Margin="12"/>
        </Grid>
    </Grid>
</Page>
